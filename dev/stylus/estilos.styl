@import "normalize.styl"

/* Paletas de color */

marron_oscuro = #260A07
amarillo = #f2ca52
fondo_gris = #ffffff
naranja = #d9631e

/*
	Fuentes 

	font-family: 'Signika', sans-serif;


*/


/* Establecemos el tama√±o de fuente del body para mobiles
   y cabeceras H */

body
	font-size 16px
	line-height 1.25em
	color marron_oscuro
	background fondo_gris
	font-family: 'Signika', sans-serif;

a
	text-decoration none
	color marron_oscuro
	&:hover
		color naranja
	&:visited
		color marron_oscuro


h1
	font-size 2em
	line-height 1.25em
	
h2
	font-size 1.625em
	line-height 1.15384615em
	
h3
	font-size 1.375em
	line-height 1.13636364em

h4
	font-size 1.125em
	line-height 1.11111111em
	

/* Utilidades para telefono movil */
.noMovil
	display none

/* Clases para el Header */

.Header-title
	font-size 1.35em
	margin 0
	text-align center
	color marron_oscuro

.Header-userImageContainer
	margin 0

.Header-userImage
	height 3.75em
	width 3.75em
	border 2px solid white
	border-radius 50%

.Header-navList
	list-style-type none
	margin 0
	text-align center
	padding 0

.Header-navItem
	display inline-block
	padding .7em
	margin 0
	background marron_oscuro
	&:hover
		background amarillo
		a
			color marron_oscuro
			text-shadow 1px 1px white

.Header-navLink
	text-decoration none
	color white
	text-transform uppercase
	text-weigth 700
	&:visited
		color white

.Index-p
	margin 1.25em
	text-indent 1.5em

.Index-p + .Index-p
	text-align center
	margin 5em 0

.Index-loginButton
	text-decoration none
	color marron_oscuro
	border 1px solid marron_oscuro
	padding 1em
	border-radius .5em
	box-shadow 3px 3px marron_oscuro
	&:visited
		color marron_oscuro

.Book
	padding 0 .5em 1.5em .5em
	margin 0 0 3em 0
	border-bottom 1px solid marron_oscuro

.Book-resume
	border-top 1px solid naranja
	border-bottom 1px solid naranja

.Book-resume, .Book-header, .Book-footer
	padding .5em 1em

.Book-title
	margin 0

.Book-titleLink
	color naranja
	text-transform uppercase
	text-weigth 700
	&:hover
		color marron_oscuro
		&:visited
			color marron_oscuro
	&:visited
		color naranja
	small
		color amarillo
		text-shadow 1px 1px marron_oscuro
		font-size 50%

.Book-author
	margin 0
	a
		color amarillo
		&:hover
			color marron_oscuro
			&:visited
				color marron_oscuro
		&:visited
			color amarillo

.Book-footer
	//background orange
	width 90%
	display inline-block
	text-align center

.Book-registro
	display block
	width 50%
	float left
	text-align left

.Book-temas
	float right
	width 50%

.Book-temasList
	list-style-type none
	text-align right
	margin 0
	padding 0

.Book-temasItem
	padding .5em
	display inline-block
	background amarillo
	border-radius .8em
	margin .2em

	&:hover
		background marron_oscuro
		a
			color white
		&:visited
			background amarillo
			a
				color marron_oscuro

.Form
	margin 3em auto 0 auto
	max-width 37.5em //600px
	//background #f7f7f7
	padding 1.5625em 0.9375em 1.5625em 0.625em
	color marron_oscuro
	text-shadow 1px 1px 1px #fff
	border 1px solid #e4e4e4
	overflow hidden
	h1
		font-size 1.5625em
		padding 0 0 0.625em 2.5em
		display block
		border-bottom 1px solid #e4e4e4
		margin -0.625em -0.9375em 1.875em -0.625em
		color marron_oscuro

.SearchForm
	margin 0 auto
	text-align left
	//max-width 37.5em //600px
	padding 1.5625em 0.9375em 1.5625em 0.625em
	color marron_oscuro
	text-shadow 1px 1px 1px #fff
	overflow hidden
	input[type="text"]
		width 37em
		display block

.Form-input, .Form-textarea
		border 1px solid #dadada
		color marron_oscuro
		height 1.875em
		margin-bottom 1em
		margin-right 0.375em
		margin-top 0.125em
		outline 0 none
		padding 3px 3px 3px 5px
		width 70%
		font-size 1em
		line-height 0.9375em
		box-shadow inset 0px 1px 4px #ececec

.Form-textarea
	padding 5px 3px 3px 5px
	height 12em


.Form-label
	display block
	margin 0
	span
		float left
		width 20%
		text-align right
		padding-right 0.625em
		margin-top 0.625em
		color marron_oscuro

.Form-submit
	background naranja
	border none
	padding 0.625em 1.5625em 0.625em 1.5625em
	color white
	box-shadow 1px 1px 5px #b6b6b6
	border-radius 3px
	cursor pointer

@import "tablet.styl"
@import "desktop.styl"